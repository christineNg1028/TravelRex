<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".ProfileFragment"
    android:background="@color/lightCream"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:paddingStart="32px"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/profileLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="32px"
            android:paddingEnd="32px">

            <TextView
                android:id="@+id/myPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="64px"
                android:gravity="center_horizontal"
                android:text="@string/profile_my_passport"
                android:textFontWeight="1000" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="0px"
                android:layout_marginTop="24px"
                android:layout_marginBottom="64px"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profileIcon"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:background="@drawable/rounded"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userNameTextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_icon_title"
                        android:textAlignment="textStart"
                        android:textStyle="bold"
                        android:textColor="@color/lightBrown"
                        android:textSize="20sp" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_currently_in" />

                        <TextView
                            android:id="@+id/userLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingStart="16px"
                            android:text="@string/profile_icon_title" />
                    </TableRow>

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32px"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/pinIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pin_icon" />

                <TextView
                    android:id="@+id/placesVisited"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="12px"
                    android:text="Places visited" />

            </TableRow>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="114dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardView1"
                    android:layout_width="250px"
                    android:layout_height="300px"
                    android:backgroundTint="@color/lightGreen"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sample1" />

                        <TextView
                            android:id="@+id/place_name1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:background="@color/cream"
                            android:gravity="center_horizontal"
                            android:text="Paris"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardView2"
                    android:layout_width="250px"
                    android:layout_height="300px"
                    android:layout_marginLeft="32px"
                    android:backgroundTint="@color/lightGreen"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sample1" />

                        <TextView
                            android:id="@+id/place_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:background="@color/cream"
                            android:gravity="center_horizontal"
                            android:text="Paris"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardView3"
                    android:layout_width="250px"
                    android:layout_height="300px"
                    android:layout_marginStart="32px"
                    android:backgroundTint="@color/lightGreen"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sample1" />

                        <TextView
                            android:id="@+id/place_name3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:background="@color/cream"
                            android:gravity="center_horizontal"
                            android:text="Paris"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32px"
                android:layout_marginBottom="16px"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/plane_icon" />

                <TextView
                    android:id="@+id/placesWanted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Want to go"
                    android:textStyle="bold" />

            </TableRow>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32px">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardView5"
                    android:layout_width="250px"
                    android:layout_height="300px"
                    android:backgroundTint="@color/lightGreen"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sample1" />

                        <TextView
                            android:id="@+id/place_name5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:background="@color/cream"
                            android:gravity="center_horizontal"
                            android:text="Paris"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardView6"
                    android:layout_width="250px"
                    android:layout_height="300px"
                    android:layout_marginLeft="32px"
                    android:backgroundTint="@color/lightGreen"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sample1" />

                        <TextView
                            android:id="@+id/place_name7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:background="@color/cream"
                            android:gravity="center_horizontal"
                            android:text="Paris"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardView8"
                    android:layout_width="250px"
                    android:layout_height="300px"
                    android:layout_marginStart="32px"
                    android:backgroundTint="@color/lightGreen"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sample1" />

                        <TextView
                            android:id="@+id/place_name9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:background="@color/cream"
                            android:gravity="center_horizontal"
                            android:text="Paris"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <Button
                android:id="@+id/logout_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="clip_horizontal|center_horizontal"
                android:layout_marginTop="80px"
                android:drawableRight="@drawable/baseline_arrow_forward_24"
                android:scaleType="center"
                android:text="@string/logout_button_text"
                app:cornerRadius="32px" />


        </LinearLayout>

    </LinearLayout>

</FrameLayout>

